<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.catfisharea.fragments.alluser.OverviewPlanFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/textPond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Ao: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Ao "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/textAcreage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Diện tích: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textPond"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondAcreage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="1000"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textAcreage" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Ngày thả: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textAcreage"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="21-04-2023"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textDate"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textConsistence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Mật độ thả: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textDate"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondConsistence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="75 con/m²"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textConsistence"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textNumberOfFish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Số lượng cá thả: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textConsistence"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondNumberOfFish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="4500 con"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textNumberOfFish"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textfingerlingSamples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Mẫu cá: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textNumberOfFish"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/fingerlingSamples"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="30 con/kg"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textfingerlingSamples"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Giá cá giống: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textfingerlingSamples"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="30 đ/con"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textPrice"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textpreparationCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Phí chuẩn bị ao: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textPrice"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/preparationCost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="@id/textpreparationCost"
                app:layout_constraintWidth_percent="0.25" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textArrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="Sắp xếp: "
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@id/arrange"
        app:layout_constraintEnd_toStartOf="@id/arrange"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:text="Tăng dần"
        android:textColor="@color/textGray"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toStartOf="@id/imageArrange"
        app:layout_constraintTop_toBottomOf="@id/layoutTop" />

    <ImageView
        android:id="@+id/imageArrange"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:src="@drawable/ic_up"
        app:layout_constraintBottom_toBottomOf="@id/arrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/arrange"
        app:tint="@color/textGray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewDetailPlan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrange" />

</androidx.constraintlayout.widget.ConstraintLayout>