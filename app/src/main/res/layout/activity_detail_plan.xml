<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.catfisharea.activities.alluser.DetailPlanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarViewPlan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_activity"
        app:title="Vụ nuôi"
        app:titleTextColor="@color/black" />

    <View
        android:id="@+id/toolbarShadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_dropshadow"
        android:translationZ="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarViewPlan" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarShadow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textPond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Ao: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:text="Ao 01 "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/textAcreage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Diện tích: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textPond"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />
            <TextView
                android:id="@+id/pondAcreage"
                android:layout_width="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textAcreage"
                app:layout_constraintStart_toEndOf="@id/textPond" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ngày thả: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textAcreage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />
            <TextView
                android:id="@+id/pondDate"
                android:layout_width="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="21-04-2023"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textDate"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textConsistence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mật độ thả: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondConsistence"
                android:layout_width="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="75 con/m²"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textConsistence"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textNumberOfFish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng cá thả: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textConsistence"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/pondNumberOfFish"
                android:layout_width="0dp"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="4500 con"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textNumberOfFish"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textfingerlingSamples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mẫu cá: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textNumberOfFish"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/fingerlingSamples"
                android:layout_width="0dp"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="30 con/kg"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textfingerlingSamples"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cá giống: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textfingerlingSamples"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="30 đ/con"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textPrice"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/textpreparationCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phí chuẩn bị ao: "
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:padding="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/textPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <TextView
                android:id="@+id/preparationCost"
                android:layout_width="0dp"
                android:padding="@dimen/_4sdp"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toTopOf="@id/textpreparationCost"
                app:layout_constraintStart_toEndOf="@id/textPond"
                app:layout_constraintWidth_percent="0.25" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewDetailPlan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTop" />

</androidx.constraintlayout.widget.ConstraintLayout>